<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!--Main Content for the add page-->
<div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-8">
            <h1><%= title %></h1>
            <br />
            <form class="form" method="POST">
                <div class="form-group mb-3">
                    <label for="nameTextField" class="form-label">Book Title</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Book Title"
                    name="name" 
                    value="<%= book.name %>"
                    required>
                </div>

                <div class="form-group mb-3">
                    <label for="authorTextField" class="form-label">Author</label>
                    <input type="text" class="form-control"
                    id="authorTextField"
                    placeholder="Enter the Book Author"
                    name="author" value="<%= book.author %>"
                    required>
                </div>

                <div class="form-group mb-3">
                    <label for="publishedTextField" class="form-label">Year</label>
                    <input type="text" class="form-control"
                    id="publishedTextField"
                    placeholder="Enter the Year of Publication"
                    name="published" 
                    value="<%= book.published %>"
                    required>
                </div>

                <div class="form-group mb-3">
                    <label for="descriptionTextArea" class="form-label">Description</label>
                    <textarea type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter the brief description of the book"
                    name="description" 
                    required><%= book.description %></textarea>
                </div>

                <div class="form-group mb-3">
                    <label for="priceTextField" class="form-label">Price</label>
                    <input type="text" class="form-control"
                    id="priceTextField"
                    placeholder="Enter the Book Price"
                    name="price" 
                    value="<%= book.price %>"
                    required>
                </div>

                <br />

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Save </button>

                <a href="/book-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel </a>
                
            </form>
        </div>
    </div>
</div>

<%- include ../partials/bottom_nav.ejs %>

<%- include ../partials/footer.ejs %>