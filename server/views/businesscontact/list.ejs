<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

	<!--Main Content-->
	<main class="container">
        <div class="row">
            <div class="offset-md-1 col-md-9">
                <h1><%= title %></h1>
                <a href="/business-contact-list/add" class="btn btn-primary" role="button">
                    <i class="fas fa-plus-circle"></i> Add Business Contact
                </a>
                <br />
                <br />
                <table class="table table-bordered table-striped table-hover">
                    <!-- Header Row -->
                    <tr>
                        <th class="text-center col-2">Name</th>
                        <th class="text-center col-1">Number</th>
                        <th class="text-center col-2">Email</th>
                        <th class="text-center col-1"></th>
                        <th class="text-center col-1"></th>
                    </tr>

                    <% for (let count = 0; count < ContactList.length; count++) { %>
                    <tr>
                        <td class="text-center col-2"><%= ContactList[count].name %></td>
                        <td class="text-center col-1"><%= ContactList[count].number %></td>
                        <td class="text-center col-2"><%= ContactList[count].email %></td>
                        <td class="text-center col-1">
                            <a href="/business-contact-list/edit/<%= ContactList[count]._id %>" class="btn btn-primary btn-sm">
                                <i class="fas fa-pencil-alt"> Edit </i>
                            </a>
                        </td>
                        <td class="text-center col-1">
                            <a href="/business-contact-list/delete/<%= ContactList[count]._id %>" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"> Delete </i>
                            </a>
                        </td>
                    </tr>
                    <% } %>
                </table>
            </div>
        </div>
	</main>

<%- include ../partials/bottom_nav.ejs %>

<%- include ../partials/footer.ejs %>